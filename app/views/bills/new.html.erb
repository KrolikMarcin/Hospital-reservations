
<%= form_for @bill, url: appointment_bills_path(params[:appointment_id]) do |f| %>
  <% 5.times do %>
  <%= f.fields_for :bill_items, @bill.bill_items.build do |b| %>
    <%= b.label :description %>
    <%= b.text_field :description %><br />
    <%= b.label :price %>
    <%= b.number_field :price %><br />
  <% end %>
  <% end %>
  <%= f.submit 'Save'%>
<% end %>