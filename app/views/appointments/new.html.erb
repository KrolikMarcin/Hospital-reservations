<%= form_for @appointment do |f| %>
  <%= f.label :diagnosis %>
  <%= f.text_area :diagnosis %><br />
  <%= f.label :reservation %>
  <%= f.select :reservation_id, @reservations %><br />
  <%= f.fields_for :prescriptions do |p| %>
    <%= p.label :medicine %>
    <%= p.text_field :medicine %><br />
    <%= p.label :recommendations %>
    <%= p.text_field :recommendations %><br />
  <% end %>
  <%= f.submit 'To bill'%>
<% end%>
