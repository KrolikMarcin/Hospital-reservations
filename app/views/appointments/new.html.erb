<%= form_for @appointment do |f|%>
  <%= f.label :appointment_date %>
  <%=f.date_field :appointment_date %>

  <%= f.label :appointment_hour %>
  <%=f.text_field :appointment_hour %>

  <%= f.label :appointment_staff %>
  <%= f.select(:appointment_staff, @appointment_staff) %>

  Rezerwacje:
  <%= f.label :preferred_hours %>
  <%= f.select(:reservation_id, @reservations) %>

  <%= f.submit 'save'%>
<% end %>


