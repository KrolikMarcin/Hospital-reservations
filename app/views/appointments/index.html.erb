<% @appointments.each do |appointment| %>
  Patient:
  <%= appointment.reservation.users.find_by(employee: false).full_name %><br />
  Appointment date:
  <%= appointment.reservation.date_time %><br />
  Doctor:
  <%= appointment.reservation.users.find_by(employee: true).full_name %><br />
  Specialization: 
  <%= appointment.reservation.doctor_specialization %><br />
  Diagnosis:
  <%= appointment.diagnosis %>
  <% if !appointment.prescriptions.empty? %>
    <% appointment.prescriptions.each do |p| %>
      Medicine:
      <%= p.medicine %><br />
    <% end %>
  <% end %>
  <% if appointment.bill %>
    Bill amount: 
    <%= appointment.bill.amount %><br />
  <% end %>
<% end%>