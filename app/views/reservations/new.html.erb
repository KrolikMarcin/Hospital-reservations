<%= form_for @reservation do |f| %>
  <%= f.label :date_time %>
  <%= f.datetime_select(:date_time, start_hour: 8, end_hour: 18, minute_step:30) %>
  <%= f.label :symptoms %>
  <%= f.text_field :symptoms %>
  <%= f.label :specialization %>
  <%= f.select(:doctor_specialization, @specializations) %>
  <%= f.submit 'Save'%>
<% end %>
