<%= @reservation.errors.full_messages %>
<%= form_for @reservation, url: reservation_change_status_save_path do |f| %>
  <%= f.label :diagnosis %>
  <%= f.text_area :diagnosis %><br />
  <%= f.fields_for :prescriptions do |p| %>
    <%= p.label :medicine %>
    <%= p.text_field :medicine %><br />
    <%= p.label :recommendations %>
    <%= p.text_field :recommendations %><br />
  <% end %>
  <%= f.submit 'To bill'%>
<% end %>
