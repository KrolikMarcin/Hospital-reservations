<div class="container">            
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Doctor</th>
      <th>Specialization</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
    <tr>
  
      <td><%= reservation.date_formated %></td>
      <td><%= reservation.employee.full_name %>
      <td><%= reservation.employee.specialization%>
      <td><%= reservation.check_status %>
      <td>
      <%= link_to 'Show', reservation_path(reservation), class: "btn btn-outline-secondary" %>
      <%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-outline-secondary" %> 
      <% if Time.now.beginning_of_day + 3.days > reservation.date_time %>
        <%= link_to 'Cancel', reservation_path(reservation),
            method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary"%>
        <% end %>
      </td>
    <% end %>
    </tr>
    
  </tbody>
</table>

</div>
