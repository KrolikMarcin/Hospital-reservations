<div class="container">            
<table class="table table-striped">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.patient.full_name %></td>
      <td><%= reservation.date_formated %></td>
      <td><%= reservation.check_status %></td>
      <td>
      <%= link_to 'Show', reservation_path(reservation), class: "btn btn-outline-secondary" %>
      <% if !reservation.status && params[:format] == 'employee_today_reservations' %>
      <%= link_to 'Change status', reservation_change_status_path(reservation), class: "btn btn-outline-secondary"%>
      <% end %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>
</div>