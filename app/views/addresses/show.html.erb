<div class='container'>
<h3><center>Address</center></h3>
  <table class="table table-striped">
      <tbody>
          <tr>
            <th>Street</th>
              <td><%= @address.street %></td>
          </tr>
          <tr>
            <th>House number</th>
              <td><%= @address.house_number %></td>
          </tr>
          <tr>
            <th>Apartment number</th>
              <td><%= @address.apartment_number %></td>
          </tr>
          <tr>
            <th>Postal code</th>
              <td><%= @address.postal_code %></td>
          </tr>
          <tr>
            <th>City</th>
              <td><%= @address.city %></td>
          </tr>
      </tbody>
  </table>
  <% if current_user.address == @address %>
    <%= link_to 'Edit address', edit_address_path(current_user.address), class: "btn btn-outline-secondary" %>
    <%= link_to 'Destroy', address_path(current_user.address), method: :delete, 
      data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary" %>
  <% end %>
</div>